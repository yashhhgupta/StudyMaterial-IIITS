      <div class="container">
        <h2 class="logo">HowToBasic</h2>
          <nav>
            <ul>  
              <!-- Search bar -->
              <li><div id="search">SEARCH :
                <!-- <input id = search onclick="open()"> -->
                <div class="dropdown">
