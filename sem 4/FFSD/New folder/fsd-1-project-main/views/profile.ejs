<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User1's Profile</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/static/mainstyles.css">
    <link rel="stylesheet" href="/static/profile.css">
    <link rel="stylesheet" href="/static/footer.css">
</head>

<body>
    <header>
        <div class="container">
            <h2 class="logo">HowToBasic</h2>
            <nav>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/about">About</a></li>
                    <li><a href="/my_courses">Courses</a></li>
                    <li><a href="/contact">Contact</a></li>
                    <li><a href="/logout" style="color:#000">Logout</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <main>
        <div class="colorfill">
            <img src="../assests/defaultpfp.png" alt="defaultpfp" class="profile">
            <div class="level">
                <span>&#8203;</span>
            </div>
        </div>
        <div class="content">
            <ul id="titlebar">
                <li>
                    <div class="text-center center-div mt-5" id="login">
                        <h2>
                            <%= user.username %>'s profile
                        </h2>
                    </div>
                </li>
            </ul>
            <br>
            <h2 style="text-align: center;">
                <b>Badges Earned</b>
            </h2>
            <br>
            <ul>
                <% if (user.comguit) { %>
                <li><img src="../assests/badges/pngegg.png" style="width: 100px; height: 100px;"></li>
                <% } %>
                <% if (user.comchess) { %>
                <li><img src="../assests/badges/pngwing.com.png" style="width: 100px; height: 100px;"></li>
                <% } %>
                <% if (user.combb) { %>
                <li><img src="../assests/badges/basketball.jpg"
                        style="width: 100px; height: 100px; border-radius: 50px;"></li>
                <% } %>
                <% if (user.comsud) { %>
                <li><img src="../assests/badges/sudoku.png" style="width: 100px; height: 100px;"></li>
                <% } %>
            </ul>
            <ul>
                <% if (user.comguit) { %>
                    <li>
                        <div class="info">Plectrum Guitar for beginners <br><br>
                            <ul>
                                <li><img src="../assests/badges/fb.png" alt="facebook" style="width: 20px;height: 20px;">
                                </li>
                                <li><img src="../assests/badges/insta.png" alt="instagram"
                                        style="width: 20px;height: 20px;"></li>
                                <li><img src="../assests/badges/pinterest.png" alt="pinterest"
                                        style="width: 20px;height: 20px;">
                                </li>
                            </ul>
                        </div>
                    </li>
                 
                <% } %>
                
                <% if (user.comchess) { %>
                    <li>
                        <div class="info">Chess course for beginners <br><br>
                            <ul>
                                <li><img src="../assests/badges/fb.png" alt="facebook" style="width: 20px;height: 20px;">
                                </li>
                                <li><img src="../assests/badges/insta.png" alt="instagram"
                                        style="width: 20px;height: 20px;"></li>
                                <li><img src="../assests/badges/pinterest.png" alt="pinterest"
                                        style="width: 20px;height: 20px;">
                                </li>
                            </ul>
                        </div>
                    </li>
                <% } %>
                <% if (user.combb) { %>
                    <li>
                        <div class="info">Basics in Basketball dribbling <br><br>
                            <ul>
                                <li><img src="../assests/badges/fb.png" alt="facebook" style="width: 20px;height: 20px;">
                                </li>
                                <li><img src="../assests/badges/insta.png" alt="instagram"
                                        style="width: 20px;height: 20px;"></li>
                                <li><img src="../assests/badges/pinterest.png" alt="pinterest"
                                        style="width: 20px;height: 20px;">
                                </li>
                            </ul>
                        </div>
                    </li>    
                <% } %>
                
                    <% if (user.comsud) { %>
                        <li>
                            <div class="info">Basics in sudoku solving <br><br>
                                <ul>
                                    <li><img src="../assests/badges/fb.png" alt="facebook" style="width: 20px;height: 20px;">
                                    </li>
                                    <li><img src="../assests/badges/insta.png" alt="instagram"
                                            style="width: 20px;height: 20px;"></li>
                                    <li><img src="../assests/badges/pinterest.png" alt="pinterest"
                                            style="width: 20px;height: 20px;">
                                    </li>
                                </ul>
                            </div>
                        </li>
                     
                    <% } %>
                    
            </ul>
        </div>
    </main>
    <%- include('footer.html'); -%>
</body>

</html>