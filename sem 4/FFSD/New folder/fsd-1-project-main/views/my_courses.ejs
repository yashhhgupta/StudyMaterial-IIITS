<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HowToBasic-Student-Dashboard</title>
    <script src="../login.js"></script>
    <link rel="stylesheet" href="\static\homepage.css">
    <link rel="stylesheet" href="/static/footer.css" />
</head>
<body>

    <div class="sidenav">
      <a href="my_courses.ejs" ><img src = "\assests\dashboard.jpg" style="height: 50px; width: 50px;"></a>
      <!-- <a href="#"><img src = "\assests\account.jpg" style="height: 50px; width: 50px;"></a> -->
      <a href="#"><img src = "\assests\badge_icon.jpg" style="height: 50px; width: 50px;"></a>
      <a href="#"><img src = "\assests\notification.jpg" style="height: 50px; width: 50px;"></a>
    </div>
    <div id = "main">
      <div class="container" >
        <h2 class="logo">HowToBasic</h2>
        <nav>
         <ul>
            <!-- Search bar -->
            <li><div id="search">SEARCH :
               <select name="Category" id="category" style="width: 100px;height: 20px;background-color: #444; color:#fff">
                 <option value="none" selected id="opt">None</option>
                 <option value="entertainment" id="opt">Entertainment</option>
                 <option value="education" id="opt">Education</option>
                 <option value="puzzles" id="opt">Puzzles</option> 
               </select></div></li>
             <li><a href="/" style="color:#000">Home</a></li>
            <li><a href="/about" style="color:#000">About</a></li>
            <li><a href="/my_courses" style="color:#000">Courses</a></li>
            <li><a href="/contact" style="color:#000">Contact</a></li>
            <% if (state) { %>
              <li><a href="/logout" style="color:#000">Logout</a></li>
            <% } %>
            <% if (!state) { %>
              <li><a href="/login" style="color:#000">Login</a></li>
             <li><a href="/signup" style="color:#000">Signup</a></li>
             <% } %>
             <li>
              <a href="/profile"><img class="pfp" src="/assests/defaultpfp.png" /></a>
            
            </li>
           </ul>
        </nav>
      </div>
      <div id = "content">
        
        <div id="my_courses">
          <p id = "intro"> Welcome to your Dashboard</p>
          <h1>Enrolled Courses</h1>
            <ul>
              <% if (user.rsud&&!user.comsud) { %>
                <li>
                  <div class="flip-card">
                  <div class="flip-card-inner">
                      <div class="flip-card-front">
                        <img src="\assests\sudoku.jpg" alt="Sudoku" id = "course_image">
                      </div>
                      <div class="flip-card-back">
                        <h4>HowToBasic</h4>
                        <h1>Rubix Cube</h1>
                        <button id = "register" ><a href="/sudokuCourses">Continue Learning...</a></button>
                      </div>
                  </div>
                </div>
                </li>   
              <% } %>
              <% if (user.rbb&&!user.combb) { %>
                <li>
                  <div class="flip-card">
                    <div class="flip-card-inner">
                        <div class="flip-card-front">
                          <img src="\assests\basketball.jpg" alt="Basket Ball" id = "course_image">
                        </div>
                        <div class="flip-card-back">
                          <h4>HowToBasic</h4>
                          <h1>Basket Ball</h1>
                          <button id = "register" ><a href="/bbCourses">Continue Learning...</a></button>
                        </div>
                    </div>
                  </div>
                </li>
              <% } %>
              <% if (user.rguit&&!user.comguit) { %>
                <li>
                  <div class="flip-card">
                  <div class="flip-card-inner">
                      <div class="flip-card-front">
                        <img src="\assests\guitar.jpg" alt="Guitar" id = "course_image">
                      </div>
                      <div class="flip-card-back">
                        <h4>HowToBasic</h4>
                        <h1>Guitar</h1>
                        <button id = "register" ><a href="/guitarCourses">Continue Learning...</a></button>
                      </div>
                  </div>
                </div>
              </li>
              <% } %>
             <% if (user.rchess&&!user.comchess) { %>
              <li>
                <div class="flip-card">
                  <div class="flip-card-inner">
                      <div class="flip-card-front">
                        <img src="\assests\chess.jpg" alt="Chess" id = "course_image">
                      </div>
                      <div class="flip-card-back">
                        <h4>HowToBasic</h4>
                        <h1>Chess</h1>
                        <button id = "register" ><a href="/chessCourses">Continue Learning...</a></button>
                      </div>
                  </div>
                </div>
              </li>
             <% } %>
           </ul>
          </div>
          <div id = "completed_courses">
            <h1>Completed Courses</h1>
            <ul>
              <% if (user.comsud) { %>
                <li>
                  <div class="flip-card">
                  <div class="flip-card-inner">
                      <div class="flip-card-front">
                        <img src="\assests\sudoku.jpg" alt="Sudoku" id = "course_image">
                      </div>
                      <div class="flip-card-back">
                        <h4>HowToBasic</h4>
                        <h1>Rubix Cube</h1>
                        <button id = "register" ><a href="#">Completed.</a></button>
                      </div>
                  </div>
                </div>
                </li>   
              <% } %>
              <% if (user.combb) { %>
                <li>
                  <div class="flip-card">
                    <div class="flip-card-inner">
                        <div class="flip-card-front">
                          <img src="\assests\basketball.jpg" alt="Basket Ball" id = "course_image">
                        </div>
                        <div class="flip-card-back">
                          <h4>HowToBasic</h4>
                          <h1>Basket Ball</h1>
                          <button id = "register" ><a href="#">Completed</a></button>
                        </div>
                    </div>
                  </div>
                </li>
              <% } %>
              <% if (user.comguit) { %>
                <li>
                  <div class="flip-card">
                  <div class="flip-card-inner">
                      <div class="flip-card-front">
                        <img src="\assests\guitar.jpg" alt="Guitar" id = "course_image">
                      </div>
                      <div class="flip-card-back">
                        <h4>HowToBasic</h4>
                        <h1>Guitar</h1>
                        <button id = "register" ><a href="#">Completed</a></button>
                      </div>
                  </div>
                </div>
              </li>
              <% } %>
             <% if (user.comchess) { %>
              <li>
                <div class="flip-card">
                  <div class="flip-card-inner">
                      <div class="flip-card-front">
                        <img src="\assests\chess.jpg" alt="Chess" id = "course_image">
                      </div>
                      <div class="flip-card-back">
                        <h4>HowToBasic</h4>
                        <h1>Chess</h1>
                        <button id = "register" ><a href="#">Completed</a></button>
                      </div>
                  </div>
                </div>
              </li>
             <% } %>
           </ul>
          </div>
        </div>
      </div>
    </div>
    <%- include('footer.html'); -%>
  </body>
</html>